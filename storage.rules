service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read from any path
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow users to write to their own tweet-images folder
    match /tweet-images/{userUid}/{allPaths=**} {
      allow read;
      allow write: if request.auth.uid == userUid;
    }

    // Allow users to write to their own profile-images folder
    match /profile-images/{userUid}/{allPaths=**} {
      allow read;
      allow write: if request.auth.uid == userUid;
    }
  }
}
